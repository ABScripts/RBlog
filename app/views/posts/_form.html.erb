<% if @post.errors.any? %>
    <h2> Errors: </h2>
    <ul> 
    <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @post do |form| %>
  <div>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </div>

  <div>
  <%= form.label :body %>
  <%= form.text_area :body %>
  </div>

  <%= form.submit %>
<% end %>